<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <attr name="titleText" format="string" />
    <attr name="titleColor" format="color" />
    <attr name="titleSize" format="dimension" />

    <declare-styleable name="Day1View">
        <attr name="titleText" />
        <attr name="titleColor" />
        <attr name="titleSize" />
        <attr name="titleBackground" format="color" />
    </declare-styleable>


    <declare-styleable name="Day2View">
        <attr name="textContent" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="imgSrc" format="reference" />
        <attr name="imgScleType">
            <enum name="fillXY" value="0" />
            <enum name="center" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="Day3View">
        <attr name="firstColor" format="color" />
        <attr name="secondColor" format="color" />
        <attr name="innerWidth" format="dimension" />
        <attr name="progressWidth" format="dimension" />
        <attr name="duration" format="integer" />
    </declare-styleable>
</resources>